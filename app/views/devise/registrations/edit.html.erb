<h2>ユーザー情報編集 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label "ニックネーム" %><br />
    <%= f.text_field :nickname, class:"form-field" %>
  </div>

  <div class="field">
    <%= f.label "自己紹介" %><br />
    <%= f.text_area :self_introduction, class:"form-field" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-field" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "新しいパスワード" %> <i>(パスワードを変更しないときは空欄にしてください)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-field" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "新しいパスワード:確認用" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-field" %>
  </div>

  <div class="field">
    <%= f.label "現在のパスワード" %> <i>(変更を確定するため現在のパスワードを入力してください)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class:"submit-btn" %>
  </div>
<% end %>
